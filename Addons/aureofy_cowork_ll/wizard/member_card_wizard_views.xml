<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Formulario del Wizard -->
    <record id="view_member_card_wizard_form" model="ir.ui.view">
        <field name="name">cowork.member.card.wizard.form</field>
        <field name="model">cowork.member.card.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Tarjetas de Miembro">
                <group>
                    <field name="membership_ids" widget="many2many_tags" readonly="1"/>
                </group>
                <p>Se generarán tarjetas de miembro para las membresías seleccionadas.</p>
                <footer>
                    <button name="action_generate_cards" type="object" string="Generar Tarjetas" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del Wizard -->
    <record id="action_member_card_wizard" model="ir.actions.act_window">
        <field name="name">Generar Tarjetas de Miembro</field>
        <field name="res_model">cowork.member.card.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_cowork_membership"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
