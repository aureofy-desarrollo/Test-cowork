<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cowork_sell_credit_package_form" model="ir.ui.view">
        <field name="name">cowork.sell.credit.package.form</field>
        <field name="model">cowork.sell.credit.package</field>
        <field name="arch" type="xml">
            <form string="Vender Paquete de Créditos">
                <sheet>
                    <group>
                        <field name="package_id"/>
                        <field name="partner_id"/>
                        <field name="amount"/>
                        <field name="price"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirmar Venta" name="action_confirm" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cowork_sell_credit_package" model="ir.actions.act_window">
        <field name="name">Vender Paquete de Créditos</field>
        <field name="res_model">cowork.sell.credit.package</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
