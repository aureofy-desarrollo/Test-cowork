<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Lista -->
    <record id="view_cowork_rating_tree" model="ir.ui.view">
        <field name="name">cowork.rating.tree</field>
        <field name="model">cowork.rating</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="membership_id"/>
                <field name="space_type"/>
                <field name="rating"/>
                <field name="date"/>
                <field name="feedback"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario -->
    <record id="view_cowork_rating_form" model="ir.ui.view">
        <field name="name">cowork.rating.form</field>
        <field name="model">cowork.rating</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="membership_id"/>
                            <field name="partner_id"/>
                            <field name="space_type"/>
                        </group>
                        <group>
                            <field name="rating" widget="priority"/>
                            <field name="date"/>
                        </group>
                    </group>
                    <group string="Comentarios">
                        <field name="feedback" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_cowork_rating" model="ir.actions.act_window">
        <field name="name">Valoraciones</field>
        <field name="res_model">cowork.rating</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_cowork_rating"
              name="Valoraciones"
              parent="menu_cowork_reports"
              action="action_cowork_rating"
              sequence="40"/>
</odoo>
