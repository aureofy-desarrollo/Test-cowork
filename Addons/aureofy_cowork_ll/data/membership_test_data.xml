<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Miembro de Prueba -->
    <record id="partner_test_cowork" model="res.partner">
        <field name="name">Miembro de Prueba (Coworking)</field>
        <field name="is_cowork_member">True</field>
        <field name="email">test.cowork@example.com</field>
        <field name="phone">+54 11 1234-5678</field>
    </record>

    <!-- Escritorios de Prueba -->
    <record id="desk_test_01" model="cowork.desk">
        <field name="name">Escritorio 01</field>
        <field name="code">ESC-01</field>
        <field name="desk_type">flexible</field>
        <field name="floor_id" ref="demo_floor_2"/> <!-- Primer Piso -->
        <field name="state">available</field>
    </record>

    <record id="desk_test_02" model="cowork.desk">
        <field name="name">Escritorio 02</field>
        <field name="code">ESC-02</field>
        <field name="desk_type">flexible</field>
        <field name="floor_id" ref="demo_floor_2"/> <!-- Primer Piso -->
        <field name="state">available</field>
    </record>

    <!-- MembresÃ­a de Prueba -->
    <record id="membership_test_01" model="cowork.membership">
        <field name="name">MEM-TEST-001</field>
        <field name="partner_id" ref="partner_test_cowork"/>
        <field name="plan_id" ref="plan_coworking_mensual_exclusive"/>
        <field name="desk_id" ref="desk_test_01"/>
        <field name="date_start" eval="datetime.now().strftime('%Y-%m-%d')"/>
        <field name="state">draft</field>
    </record>
</odoo>
